{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
