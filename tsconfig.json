{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "lib": ["ES2020"],
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
