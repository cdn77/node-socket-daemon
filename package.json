{
  "name": "nodesockd",
  "version": "1.2.1",
  "description": "Bridges a Nginx reverse proxy to a Node.js service using Unix sockets",
  "homepage": "https://github.com/cdn77/node-socket-daemon",
  "license": "MIT",
  "author": {
    "name": "Dan Kadera",
    "email": "dan.kadera@cdn77.com",
    "url": "https://www.cdn77.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdn77/node-socket-daemon.git"
  },
  "dependencies": {
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/node": "^12.12.35",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build:cleanup": "rimraf build/*",
    "build:compile": "tsc",
    "build": "run-s build:cleanup build:compile",
    "lint": "eslint 'src/**/*.ts'"
  },
  "bin": {
    "nodesockd": "build/cli.js"
  },
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "files": [
    "build/**/*.js",
    "build/index.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
